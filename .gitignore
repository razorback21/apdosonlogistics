# WordPress specific ignores
# ------------------------------------------------------------------------------
# Ignore the core config file (contains sensitive database credentials)
wp-config.php

# Ignore user-uploaded content
/wp-content/uploads/
/wp-content/blogs.dir/ # Multisite uploads older versions
/wp-content/upgrade/

# Ignore backup files and directories
/wp-content/backup-*/
/wp-content/backups/
*.sql
*.bak

# Ignore cache files and directories
/wp-content/cache/
/wp-content/advanced-cache.php
/wp-content/wp-cache-config.php

# Ignore log files
*.log
debug.log
error_log

# Ignore themes and plugins (common practice, manage via Composer or install directly)
# Add exceptions for custom themes/plugins you want to track
/wp-content/plugins/
/wp-content/themes/
!/wp-content/themes/apdoson

# Ignore language files (usually managed by WordPress core/plugins/themes)
/wp-content/languages/

# Ignore Must Use Plugins directory unless you specifically manage them in Git
# !/wp-content/mu-plugins/your-mu-plugin/
/wp-content/mu-plugins/

# Ignore sitemap files generated by plugins
sitemap.xml
sitemap.xml.gz

# Ignore files specific to certain plugins/services (add as needed)
# Example: Wordfence logs
# /wp-content/wflogs/

# General ignores
# ------------------------------------------------------------------------------
# Ignore OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Ignore IDE/editor directories and files
.idea/
.vscode/
*.sublime-project
*.sublime-workspace

# Ignore dependency directories (if using build tools like npm/Composer)
node_modules/
vendor/

# Ignore sensitive environment files
.env
.env.*
!.env.example

# Ignore other common miscellaneous files
.htaccess # Server config, often environment-specific
wp-cli.yml
